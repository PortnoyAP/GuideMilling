<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tap_screen"
    tools:context=".cnc_calculator.CncCalculator">

    <TextView
        android:id="@+id/tv_tn2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/tooth_number_z"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/editText_vc"
        app:layout_constraintEnd_toEndOf="@+id/spinnerMaxSpeeds"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_max_spindel_speed"
        app:layout_constraintTop_toTopOf="@+id/tv_fpt"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_feed_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:maxLength="6"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sp_speed2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_sp_speed_result"
        app:layout_constraintTop_toTopOf="@+id/tv_sp_speed2"
        app:layout_constraintVertical_bias="0.476" />

    <TextView
        android:id="@+id/tv_operation"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="@string/operation"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinnerOperstion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/spinnerMaxSpeeds"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:dropDownWidth="wrap_content"
        android:popupTheme="@style/TextAppearance.AppCompat.Display3"
        android:spinnerMode="dialog"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_max_spindel_speed"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_max_spindel_speed"
        app:layout_constraintTop_toBottomOf="@+id/tv_max_spindel_speed"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_max_spindel_speed"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="@string/max_spindelspeed"
        android:textAlignment="center"
        android:textColor="#C62828"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_operation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_operation"
        app:layout_constraintTop_toTopOf="@+id/tv_operation"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/spinnerOperstion"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:contextClickable="false"
        android:popupBackground="@android:drawable/btn_dropdown"
        android:spinnerMode="dialog"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_operation"
        app:layout_constraintEnd_toStartOf="@+id/spinnerMaxSpeeds"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_operation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131" />

    <TextView
        android:id="@+id/tv_sp_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spindle_speed_n"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_fz"
        app:layout_constraintVertical_bias="0.646" />

    <TextView
        android:id="@+id/tv_fpt"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="@string/feed_per_tooth_fz"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editText_fz"
        app:layout_constraintEnd_toEndOf="@+id/tv_operation"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/spinnerOperstion"
        app:layout_constraintTop_toBottomOf="@+id/spinnerOperstion"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_diameter"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="@string/diameter_d"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cs"
        app:layout_constraintEnd_toEndOf="@+id/editText_z"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_tn2"
        app:layout_constraintTop_toTopOf="@+id/tv_cs"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_cs"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="@string/cutting_speed_vc"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editText_vc"
        app:layout_constraintEnd_toEndOf="@+id/tv_fpt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_fpt"
        app:layout_constraintTop_toBottomOf="@+id/editText_fz"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_sp_speed2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/feed_f"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/tv_sp_speed"
        app:layout_constraintTop_toBottomOf="@+id/tv_sp_speed"
        app:layout_constraintVertical_bias="0.346" />

    <TextView
        android:id="@+id/tv_sp_speed_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:maxLength="6"
        android:singleLine="false"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sp_speed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.295"
        app:layout_constraintStart_toEndOf="@+id/tv_sp_speed"
        app:layout_constraintTop_toTopOf="@+id/tv_sp_speed"
        app:layout_constraintVertical_bias="0.571" />

    <EditText
        android:id="@+id/editText_fz"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:ems="10"
        android:hint="@string/_0_00"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"
        android:textColorLink="@android:color/background_dark"
        android:textCursorDrawable="@color/black_overlay"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_fpt"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_fpt"
        app:layout_constraintTop_toBottomOf="@+id/spinnerOperstion"
        app:layout_constraintVertical_bias="0.154" />

    <EditText
        android:id="@+id/editText_z"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:ems="10"
        android:hint="@string/z"
        android:inputType="number"
        android:maxLength="5"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"
        android:textCursorDrawable="@color/black_overlay"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_fz"
        app:layout_constraintEnd_toEndOf="@+id/tv_tn2"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="@+id/tv_tn2"
        app:layout_constraintTop_toTopOf="@+id/editText_fz"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_diameter"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:ems="10"
        android:hint="@string/d"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"
        android:textCursorDrawable="@color/black_overlay"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_vc"
        app:layout_constraintEnd_toEndOf="@+id/tv_diameter"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_diameter"
        app:layout_constraintTop_toBottomOf="@+id/tv_cs"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_vc"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:ems="10"
        android:hint="@string/_0_00"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"
        android:textCursorDrawable="@color/black_overlay"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_cs"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_cs"
        app:layout_constraintTop_toBottomOf="@+id/editText_fz"
        app:layout_constraintVertical_bias="0.219" />

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:onClick="calculate"
        android:text="@string/calculate"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_sp_speed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_vc"
        app:layout_constraintVertical_bias="0.372" />


</androidx.constraintlayout.widget.ConstraintLayout>